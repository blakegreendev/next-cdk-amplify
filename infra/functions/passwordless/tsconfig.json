{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "rootDir": ".",
      "outDir": ".",
      "noImplicitAny": false,
      "sourceMap": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "declaration": false,
      "listFiles": false
    },
    "exclude": [
      ".vscode",
      ".git",
      "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
      "rewriteTsconfig": false
    }
}